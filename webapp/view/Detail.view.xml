<mvc:View 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	controllerName="com.sap.sapmentors.sitreg.registration.controller.Detail">

	<semantic:DetailPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>detailTitle}" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">

		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Location}" 
				number="{         path: 'EventDate',         type: 'sap.ui.model.type.Date',         formatOptions: {          style: 'medium'         }        }">
			</ObjectHeader>
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="iconTabBarFilter1" icon="sap-icon://hint" tooltip="{i18n>detailIconTabBarInfo}">
						<f:SimpleForm editable="false" layout="ResponsiveGridLayout">
							<Label text="{i18n>detailIconTabBarInfoStartTime}"/>
							<Text text="{ 
								path: 'StartTime',
								type : 'sap.ui.model.type.Time'
							}" />
							<Label text="{i18n>detailIconTabBarInfoEndTime}"/>
							<Text text="{ 
								path: 'EndTime',
								type : 'sap.ui.model.type.Time'
							}"/>
							<Label text="Your RSVP"/>
							<Text text="{Participant/RSVP}"/>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarFilter2" icon="sap-icon://attachment" tooltip="{i18n>detailIconTabBarAttachments}">
					</IconTabFilter>
				</items>
			</IconTabBar>
			<Table id="lineItemsList" width="auto" 
				items="{Participants}" 
				updateFinished="onListUpdateFinished" 
				noDataText="{i18n>detailLineItemTableNoDataText}" 
				busyIndicatorDelay="{detailView>/lineItemTableDelay}" 
				class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title id="lineItemsHeader" text="{detailView>/lineItemListTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="ParticipantID">
						<Text text="ID"/>
					</Column>
					<Column id="ParticipantName">
						<Text text="{i18n>detailLineItemTableParticipantName}"/>
					</Column>
					<Column id="Twitter" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
						<Text text="{i18n>detailLineItemTableTwitter}"/>
					</Column>
					<Column id="RSVP" minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>detailLineItemTableRSVP}"/>
					</Column>
					<Column id="PreEveningEvent" minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>detailLineItemTablePreEveningEvent}"/>
					</Column>
					<Column id="PostEveningEvent" minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>detailLineItemTablePostEveningEvent}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier text="{ID}" />
							<Link href="{BioURL}" target="_blank" text="{FirstName} {LastName}" />
							<ObjectNumber unit="{Twitter}"/>
							<Text text="{RSVP}"/>
							<Text text="{PreEveningEvent}"/>
							<Text text="{PostEveningEvent}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:positiveAction>
			<semantic:PositiveAction 
				text="{i18n>detailRegister}" 
				press="onRegister" 
				visible="{= ${Participant} === null ? true : false}"/>
		</semantic:positiveAction>
		<semantic:editAction>
			<semantic:EditAction 
				id="edit" 
				press="onUpdateRegistration"
				visible="{= ${Participant} === null ? false :  true }"/>
		</semantic:editAction>		
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

	</semantic:DetailPage>

</mvc:View>